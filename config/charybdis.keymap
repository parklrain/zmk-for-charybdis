        combo_lctrl_lwin {
            bindings = <&kp LC(LWIN)>;
            key-positions = <16 15 13 14>;
            layers = <0 1 2 3>;
            timeout-ms = <50>;
            require-prior-idle-ms = <100>;
            slow-release;
        };

        comobo_rshft_rctrl {
            bindings = <&kp LC(LSHFT)>;
