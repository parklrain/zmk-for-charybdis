    keymap {
        compatible = "zmk,keymap";

        Base {
            bindings = <
&kp TAB    &kp Q  &kp W  &kp E      &kp R        &kp T        &kp Y        &kp U       &kp I        &kp O    &kp P        &kp BSPC
&kp CAPS   &kp A  &kp S  &kp D      &lt 3 F      &kp G        &kp H        &kp J       &kp K        &kp L    &kp SEMI     &kp ENTER
&kp LSHFT  &kp Z  &kp X  &kp C      &kp V        &kp B        &kp N        &kp M       &lt 6 COMMA  &kp DOT  &lt 5 SLASH  &kp RSHFT
                         &lt 1 ESC  &lt 2 SPACE  &lt 3 TAB    &lt 1 ENTER  &lt 2 BSPC  &lt 3 DEL
            >;
        };

        Num {
            bindings = <
&trans     &kp LBKT   &kp N7  &kp N8   &kp N9  &kp RBKT     &kp HOME   &kp END   &kp I     &kp O      &kp P      &trans
&kp COMMA  &kp SQT    &kp N4  &kp N5   &kp N6  &kp EQUAL    &kp PG_UP  &kp LEFT  &kp UP    &kp RIGHT  &kp ASTRK  &trans
&trans     &kp GRAVE  &kp N1  &kp N2   &kp N3  &kp BSLH     &kp PG_DN  &kp PLUS  &kp DOWN  &kp MINUS  &kp SLASH  &trans
                              &kp DOT  &kp N0  &kp MINUS    &trans     &trans    &trans
            >;
        };

        Sym {
            bindings = <
&trans  &kp LBRC   &kp AMPS  &kp ASTRK  &kp LPAR   &kp RBRC     &kp HOME   &kp END         &kp PRINTSCREEN  &kp SCROLLLOCK   &kp PAUSE_BREAK  &trans
&trans  &kp DQT    &kp DLLR  &kp PRCNT  &kp CARET  &kp PLUS     &kp PG_UP  &kp LEFT        &kp UP           &kp RIGHT        &msc SCRL_UP     &trans
&trans  &kp TILDE  &kp EXCL  &kp AT     &kp HASH   &kp PIPE     &kp PG_DN  &msc SCRL_LEFT  &kp DOWN         &msc SCRL_RIGHT  &msc SCRL_DOWN   &trans
                             &kp LPAR   &kp RPAR   &kp UNDER    &trans     &trans          &trans
            >;
        };

        Fnc {
            bindings = <
&trans  &kp LC(Q)  &kp LC(W)  &kp LC(E)  &kp LC(R)  &kp LC(T)    &kp LC(Y)  &kp F7  &kp F8  &kp F9  &kp F12  &trans
&trans  &kp LC(A)  &kp LC(S)  &kp LC(D)  &kp LC(F)  &kp LC(G)    &kp LC(H)  &kp F4  &kp F5  &kp F6  &kp F11  &trans
&trans  &kp LC(Z)  &kp LC(X)  &kp LC(C)  &kp LC(V)  &kp LC(B)    &kp LC(N)  &kp F1  &kp F2  &kp F3  &kp F10  &trans
                              &trans     &trans     &trans       &trans     &trans  &trans
            >;
        };

        Sys {
            bindings = <
&trans       &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4    &bt BT_CLR  &bt BT_CLR_ALL  &out OUT_BLE  &out OUT_USB  &out OUT_TOG  &trans
&trans       &trans        &trans        &trans        &trans        &trans          &trans      &trans          &trans        &trans        &trans        &trans
&bootloader  &sys_reset    &trans        &trans        &trans        &trans          &trans      &trans          &trans        &trans        &sys_reset    &bootloader
                                         &trans        &trans        &trans          &trans      &trans          &trans
            >;
        };

        SNIPE {
            bindings = <
&trans  &trans  &trans  &trans  &trans     &trans       &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans     &trans       &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans     &mkp MCLK    &trans  &trans  &trans  &trans  &trans  &trans
                        &none   &mkp LCLK  &mkp RCLK    &trans  &trans  &trans
            >;
        };

        SCROLL {
            bindings = <
&trans  &trans  &trans  &trans  &trans     &trans       &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans     &trans       &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans     &mkp MCLK    &trans  &trans  &trans  &trans  &trans  &trans
                        &none   &mkp LCLK  &mkp RCLK    &trans  &trans  &trans
            >;
        };
    };

    conditional_layers {
        compatible = "zmk,conditional-layers";

        combo_sys {
            if-layers = <1 3>;
            then-layer = <4>;
        };
    };

};
