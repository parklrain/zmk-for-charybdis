        };

        combo_rwin {
            bindings = <&kp LWIN>;
            key-positions = <18 19>;
            layers = <0 1 2 3>;
            timeout-ms = <50>;
            require-prior-idle-ms = <100>;
            slow-release;
        };

        combo_lshft_lctrl {
            bindings = <&kp LC(LSHFT)>;
            key-positions = <16 15 14>;
            layers = <0 1 2 3>;
            timeout-ms = <50>;
            require-prior-idle-ms = <100>;
